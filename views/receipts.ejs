<html lang="en">
    <head>
        <% include partials/headers %>
    </head>
    <body>
        <% include partials/navbar %>
        <div class = "container">
            <% if (typeof receipts == "object") { %>
                <div class="panel-group" id="accordion"> <% for(var i = 0; i < receipts.length; i++) { %>
                    
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= receipts[i].receipt_id %>">Collapsible Group Item <%= receipts[i].receipt_id %></a>
                            </h4>
                        </div>
                        <div id="collapse<%= receipts[i].receipt_id %>" class="panel-collapse collapse">
                            <div class="panel-body">
                                <h1><%= receipts[i].name %></h1>
                                <p><%=  receipts[i].address %></p>
                            </div>
                        </div>
                    </div>
                <% } %>

                </div> <% } else { %>
                There are no receipts associated with this account 
                <% } %>
        </div>

    <p><a href = "/dashboard">Dashboard</a></p>
    </div>
    <% include partials/footer %>
    </body>
</html>