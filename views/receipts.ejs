<html lang="en">
    <head>
        <% include partials/headers %>
    </head>
    <body>
        <% include partials/navbar-inside %>
        <div class = "container">
        <div class = "row">
            <% if (typeof receipts == "object") { %>
                <div class="panel-group col-md-6" id="accordion"> <% for(var i = 0; i < receipts.length; i++) { %>
                    
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= receipts[i].receipt_id %>"><%= receipts[i].name %></a>
                            </h4>
                            <%= receipts[i].date_created %>

                        </div>
                        <div id="collapse<%= receipts[i].receipt_id %>" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class = "row">
                                    <div class = "col-md-4">

                                        <a href = "receipts/<%= receipts[i].receipt_id %>?popout=true", target = "_blank">Popout</a>
                                        <h2>Total</h2>
                                        <p>$<%= receipts[i].total %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
                </div>
                <div class = "col-md-6" id = "receiptArea">
                    <div class = "jumbotron well">
                        <h1>Let's get started!</h1>
                        <p>Click a receipt on the left to view it individually.</p>
                        <p> You can also click pop out to move the receipt to a new window.</p>
                    </div>
                </div>
            <% } else { %>
                There are no receipts associated with this account 
            <% } %>
        </div>
        </div>

    <% include partials/footer %>
    </body>
</html>