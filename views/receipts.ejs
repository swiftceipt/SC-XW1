<html lang="en">
    <head>
        <% include partials/headers %>
        <script type="text/javascript" src = "js/popup.js"></script>
    </head>
    <body>
        <% include partials/navbar %>
        <div class = "container">
            <% if (typeof receipts == "object") { %>
                <div class="panel-group" id="accordion"> <% for(var i = 0; i < receipts.length; i++) { %>
                    
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= receipts[i].receipt_id %>">Receipt <%= receipts[i].receipt_id %></a>
                            </h4>
                        </div>
                        <div id="collapse<%= receipts[i].receipt_id %>" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class = "row">
                                    <div class = "col-md-4">
                                        <h1><%= receipts[i].name %></h1>
                                        <p><%=  receipts[i].address %></p>
                                    </div>
                                    <div class = "col-md-8">
                                        <%- receipts[i].html %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>

                </div> <% } else { %>
                There are no receipts associated with this account 
                <% } %>
        </div>

    <p><a href = "/dashboard">Dashboard</a></p>
    <% include partials/footer %>
    </body>
</html>